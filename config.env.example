# Arquivo de configuração para o sistema de contratos
# COPIE este arquivo para config.env e configure suas credenciais

# ==========================================
# AWS CONFIGURAÇÕES
# ==========================================
AWS_ACCESS_KEY_ID=SUA_ACCESS_KEY_AQUI
AWS_SECRET_ACCESS_KEY=SUA_SECRET_KEY_AQUI
AWS_REGION=us-east-1

# ==========================================
# BUCKETS S3
# ==========================================
RESULTS_BUCKET=contrato-assinatura-resultados-dev

# ==========================================
# MANYCHAT CONFIGURAÇÕES
# ==========================================
MANYCHAT_API_KEY=SUA_API_KEY_AQUI

# ==========================================
# API CONFIGURAÇÕES
# ==========================================
API_BASE_URL=http://localhost:5000
CORS_ORIGINS=*
LOG_LEVEL=INFO
MAX_WEBHOOK_ENTRIES=1000

# ==========================================
# EMAIL NOTIFICATIONS (para webhooks DocuSign)
# ==========================================
NOTIFICATION_EMAIL=seu-email@exemplo.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=seu-email@gmail.com
SMTP_PASSWORD=sua-senha-app-gmail

# ==========================================
# DEPLOYMENT CONFIGURAÇÕES
# ==========================================
FLASK_ENV=development
PORT=5000
